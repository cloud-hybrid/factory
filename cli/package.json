{
    "name": "@cloud-vault/cli",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "types": "src/index.js",
    "scripts": {
        "compile": "tsc --pretty --watch",
        "start": "node src/index.js",
        "cli": "node src/index.js"
    },
    "dependencies": {
        "chalk": "^5.0.0",
        "yargs": "^17.3.0",
        "@types/node": "latest",
        "@types/yargs": "^17.0.7",
        "typescript": "^4.5.4",
        "@cloud-vault/cli": "."
    },
    "files": [
        "./package.json",
        "README.md",
        "tsconfig.json"
    ],
    "exports": {
        ".": "./index.js",
        "./index.js": "./index.js",
        "./header": "./src/header.js",
        "./arguments": "./src/arguments.js",
        "./commands": "./src/commands/index.js",
        "./commands/*": "./src/commands/*.js",
        "./commands/environment": "./src/commands/environment/index.js",
        "./commands/environment/*": "./src/commands/environment/*.js",
        "./commands/environment/variables": "./src/commands/environment/variables/index.js",
        "./commands/environment/variables/*": "./src/commands/environment/variables/*.js",
        "./commands/cdfk": "./src/commands/cdfk/index.js",
        "./commands/cdfk/*": "./src/commands/cdfk/*.js",
        "./utilities": "./src/utilities/index.js",
        "./utilities/*": "./src/utilities/*.js",
        "./package.json": "./package.json"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.7.0",
        "@typescript-eslint/experimental-utils": "^5.7.0",
        "@typescript-eslint/parser": "^5.7.0",
        "@typescript-eslint/scope-manager": "^5.7.0",
        "@typescript-eslint/typescript-estree": "^5.7.0"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended"
        ],
        "rules": {
            "no-case-declarations": 0,
            "@typescript-eslint/ban-types": 0,
            "@typescript-eslint/no-explicit-any": 0,
            "@typescript-eslint/explicit-function-return-type": 0,
            "@typescript-eslint/no-use-before-define": 0,
            "@typescript-eslint/no-empty-interface": 0,
            "@typescript-eslint/explicit-module-boundary-types": 0,
            "@typescript-eslint/no-empty-function": 0,
            "no-sequences": "error"
        },
        "ignorePatterns": [
            "ci",
            "dist",
            "coverage",
            "distribution",
            "node_modules"
        ]
    }
}
